<h1> Wikis </h1>

<div class="row">
    <div class="col-md-8">
      <% @wikis.each do |wiki| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <p><%= link_to wiki.title, wiki %> <% if wiki.private == true %> <strong> - private</strong><% end %></p>
            </div>
          </div>
        </div>
          <% end %>
          <% elsif current_user.standard? %>
            <% @public_wikis.each do |wiki| %>
            <div class="media">
          <div class="media-body">
            <div class="media-heading">
              <%= link_to wiki.title, wiki %>
            </h4>
            <small>
              <%= wiki.body %>
            </small>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    </div>
</div>